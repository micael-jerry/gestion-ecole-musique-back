generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MusicCategory {
  id          String  @id @default(uuid())
  name        String  @unique @db.VarChar()
  description String? @db.Text
}

model Setting {
  id    String @id @default(uuid())
  name  String @unique
  value Float
}

model FeeType {
  id         String  @id @default(uuid())
  name       String  @unique @db.VarChar()
  description String?
}

model Role {
  id       String @id @default(uuid())
  name     String @unique
  actions  Action[]
}

model Action {
  id      String @id @default(uuid())
  tag     String @unique
  name    String 
  description String?
  roles   Role[]
}
